//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	-var titulo = "Checkout";
	title Saha - Tienda en línea

//-Etiqueta Metadescription
block description
	meta(name="description", content="Saha - Tienda en línea" )

block content
	section.container-fluid
		h1.divisor Checkout
		
		div.row

			//Autenticación
			article.col-lg-4.col-md-4.col-sm-8.col-xs-12.col-lg-offset-4.col-md-offset-4.col-sm-offset-2
					a.show-login.text-center(href="#") Sí ya es cliente haga click aquí

					form#user-login
						//email
						div.form-group
							label(for="email") email
							input.form-control(type="email", id="email", name="email")
						///-email

						//contraseña
						div.form-group
							label(for="pass") contraseña
							input.form-control(type="password", id="pass", name="pass")
						///-contraseña
						div.checkbox
							label(for="recordarme")
								input(type="checkbox", name="recordarme", id="recordarme")
								|Recordarme

						button#submit-login.btn.btn-login(type="button") login

						a(href="#") ¿Olvidó su contraseña?							

			///-Autenticación

			div.clearfix


			form#checkout.row

				//Información de cliente
				article.col-lg-8.col-md-8.col-sm-8.col-xs-12.col-checkout
					h2 Información

					//Nombre
					div.form-group
						label(for="nombres") nombres
						input.form-control(type="text", id="nombres", name="nombres")
					///-Nombre


					//documento
					div.form-documento
						div.form-group.form-tipo
							label(for="tipoCC") Tipo de doc.
							select.form-control(name="tipoCC", id="tipoCC")
								option(value="")
								option(value="CC") CC
								option(value="CE") CE

						div.form-group.form-num
							label(for="cc") número de documento
							input.form-control(type="number", id="cc", name="cc", min="0")
					///-documento

					//email
					div.form-group
						label(for="email") email
						input.form-control(type="email", id="email", name="email")
					///-email

					//Teléfono
					div.form-group
						label(for="phone") teléfono
						input.form-control(type="number", name="phone", id="phone", min="0", maxlenght="10")
					///-Teléfono

					//País
					div.form-ubicacion
						div.form-group
							label(for="pais") país
							select.form-control(name="pais", id="pais")
								option(value="") 
								option(value="123") este
								option(value="1231") otro
						///-País

						//Ciudad
						div.form-group
							label(for="ciudad") ciudad
							select.form-control(name="ciudad", id="ciudad")
								option(value="") 
								option(value="123") este
								option(value="1231") otro
						///-Ciudad


					//Dirección
					div.form-group
						label(for="direccion") dirección
						input.form-control(type="text", id="direccion", name="direccion")
					///-Dirección


					//info adicional
					div.form-group
						label(for="infoAdicional") información adicional
						textarea.form-control(name="infoAdicional", id="infoAdicional")
					///-info adicional


				

				///-Información de cliente
				//Compra total
				article.col-lg-4.col-md-4.col-sm-4.col-xs-12.col-total
					
					div.container-orden
						h2 Su orden

						div.valor
							p subtotal
							p.precio $999999


						div.valor
							p IVA
							p.precio $999999

						div.valor
							p envío
							p.precio $999999					

						div.valor.valor-total
							p total
							p.precio $999999


						button#go-checkout.btn.btn-go-checkout(type="submit") Finalizar compra
						


			///-Compra total


block Scripts
	script(src="js/saha.checkout.js")

