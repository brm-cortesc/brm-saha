.menu
	margin-top 1rem
	ul
		padding 0
		margin 0 auto
		display inline-block
		list-style-type none
		transitionBase(0.3s)
		
		li
			display inline-block
			vertical-align middle
						
			a
				color #fff
				display block
				line-height 1
				padding 0 2rem
				text-transform uppercase
				
			&:hover, &.active
				a
					color $Amarillo
					font-weight $Normal
					

	&.active
		ul
			right 0

	.btn
		background-color transparent
		display none
		cuadrado(4.8rem)
		padding 0
		position relative
		
		.sr-line
			background-color #fff
			display block
			height 0.2rem
			position absolute
			width 100%
			
			&:nth-of-type(1)
				top 20%
				
			&:nth-of-type(2)
				top 50%	
				
			&:nth-of-type(3)
				top 80%

	.logo-hidden
		display none
		height auto
		max-width 20rem
		vertical-align middle