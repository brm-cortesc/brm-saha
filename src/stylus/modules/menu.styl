.menu
	margin-top 1rem
	ul
		padding 0
		margin 0 auto
		display inline-block
		list-style-type none
		
		li
			display inline-block
			vertical-align middle
						
			a
				color #fff
				display block
				line-height 1
				padding 0 2rem
				text-transform uppercase
				
			&:hover, &.active
				a
					color $Amarillo
					font-weight $Normal

	.btn
		display none
		cuadrado(4.8rem)
		padding 1rem
		
		.line
			background-color #fff
			display block
			height 0.1rem
			margin 1rem auto
			width 100%			

	.logo-hidden
		display none
		height auto
		max-width 20rem
		vertical-align middle