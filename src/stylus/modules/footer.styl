footer
	background-color $Verde
	color #fff
	margin-top 2rem
	padding 1rem
	
	h3
		font-size 1.6rem
		margin 0
		margin-bottom 0.5rem
		font-weight $Bold
	
	ul
		list-style-type none
		margin 0
		padding 0
		
		li
			font-size 1.4rem
			margin-bottom 0.5rem
			
			a
				color #fff
				text-transform uppercase
			
	.col-lg-3
		border-right 1px solid rgba(255, 255, 255, 0.5)
		min-height 17rem
		
		&:nth-of-type(1)
			border-left 1px solid rgba(255, 255, 255, 0.5)

	.icon
		height auto
		max-width 3rem
		margin 0 0.5rem
		
		&:nth-of-type(1)
			margin-left 0

	.logo
		max-width 26rem
		margin 1rem 0 4rem