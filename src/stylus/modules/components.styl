.bg-primary
	background-color rgba($Verde, 0.3)
	color $Gris
	padding 0.5rem

.cantidad, .size
	display inline-block
	margin-bottom 2rem
	vertical-align middle
	width 100%
	

.cantidad
	max-width 20%
	
	input, .controls
		display inline-block
		margin 0
		max-width 45%
		padding 0
		vertical-align middle
		width 100%
		
	input
		border 1px solid lighten($Gris, 60%)
		text-align center
		

	.controls
		button
			color lighten($Gris, 60%)
			display block
			font-size 1rem
			margin 0 auto
			padding 0
			
			&:active
				color $Verde

//columns
.col
	
	&-carrito			
		.cantidad
			display block
			margin 1rem auto
			max-width 40%
			

		.col-related
			.btn-large
				background-color lighten($Gris, 60%)
				color $Gris
				font-size 1.8rem
				padding 0.5rem 1rem
				text-align center
				
				&:hover
					background-color #fff
					color #000
			
		.item-handler
			color $Gris
			font-size 1.8rem
			margin 4rem 0.2rem
			
			&:hover
				color $Verde
				text-decoration none
				

	&-checkout,
	&-registro
		h2
			margin-top 0
			

		.form
			&-documento
				
				.form
					&-group
						display inline-block
						vertical-align top
						
					&-num
						width 79.3%
						
					&-tipo
						width 20%
						

			&-half
				.form-group
					display inline-block
					vertical-align top
					width 49.7%
					
		
	&-categories
		
		.col-lg-4		
			margin-bottom 1.5rem
			// min-height 45rem
		
		h3
			margin 0.5rem 0
			

		.item-product
			position relative
			
			
			&:hover
				.quick-buttons
					opacity: 0.8
		
		.quick-buttons
			bottom 0.5rem
			left @bottom
			opacity 0
			position absolute
			transitionBase(0.3s)
			.btn
				&-add-cart
					padding 0.4rem 1.9rem
					font-size 2rem
		
		.ticker
			background-color $Verde
			color #fff
			left 1rem
			margin 0
			max-width 40rem
			padding 0.5rem 1rem
			position absolute
			top @left

	&-datos
		path('bg-datos.jpg')
		background-size cover
		background-repeat no-repeat
		padding 5rem 2rem 8rem
		
	
	&-filter
		h2,
		h3
			border-bottom 1px solid $Gris
			margin-top 0
			padding 0.5rem 0
			

		.btn-large
			font-size 1.6rem

		.filtro
			.opciones
				transition opacity ease-in-out 0.3s
				
				li
					list-style-type none
					position relative
					
					&::before
						color $Verde
						content '\e014'
						display block	
						font-family $Icons
						left -1.5rem
						opacity 0
						position absolute
						transitionBase(0.3s)
					a
						color $Gris
						&:hover
							color $Verde
							

					&.active
						&::before
							opacity 1
						a
							color $Verde
							

	&-highlights
		margin-bottom 1rem
		margin-top @margin-bottom
		
		a
			background-color transparent
			float left
			max-width 33%
			
			&:hover
				img
					mix-blend-mode normal
			
		&::after, &::before
			clear both
			content ''
			display table
	
	
	&-login
		#user-login
			display block
			opacity 1
			
	&-total
		text-transform uppercase
		
		.btn
			display block
			margin-left auto
			margin-right @margin-left
			
		p.text-center
			margin 0.5rem 0
			
		.valor
			border-bottom 1px solid lighten($Gris, 60%)
			color lighten($Gris, 40%)
			font-size 1.4rem
			line-height 1
			margin 1rem 0
			padding 1rem 0rem
			
			p
				display inline-block
				vertical-align middle
				margin 0
				padding 0
				width 49%
				
				&:nth-of-type(2)
					text-align right

			&-total
				border none
				font-size 1.8rem
				font-weight $Bold
	
	&-related

		.product
			&-text,
			&-price
				display inline-block
				margin 1rem 0
				max-width 48%
				padding 0
				vertical-align middle
				width 100%
				
			&-text
				h3
					margin 0
				
			&-price
				text-align right

.colores
	margin-top 2rem


//containers
.container	
	&-datos
		background-color lighten($Gris, 95%)
		color lighten($Gris, 40%)
		margin 0 auto 4rem
		max-width 80%
		padding 2.5rem 2rem
		
		a
			color lighten($Gris, 40%)
			display block
			margin 0
			
			&:hover
				color $Verde
		
		h3
			font-size 1.7rem
			margin 2rem 0 0
			text-transform uppercase
			
		p
			font-size 1.3rem
			margin 0
			text-transform uppercase
		

	&-devoluciones
		clear both
		margin-top 1.5rem !important
		
		.col-lg-4
			background-color lighten($Gris, 95%)
			padding 2rem
			text-align center
			
			&:nth-of-type(2)
				background-color lighten($Gris, 80%)
				

	&-orden
		background-color lighten($Gris, 95%)
		padding 1rem
		
		h2
			margin-top 0			

	&-home
		article			
			a
				background-color $Verde
				display block
				
				&:hover
					img
						mix-blend-mode hard-light
						opacity 0.5
				
			&:nth-of-type(2)
				a
					&:nth-of-type(1)
						margin-bottom 2rem
				
			&:nth-of-type(3)
				margin-top 1rem
		img
			height auto
			max-width 100%
			transitionBase(0.3s)
			width 100%
			

	&-product
		h2
			margin-bottom 0rem
			margin-top 0.5rem
			
		h4
			font-size 1.3rem
			font-weight $Light
			
		.ref, .price
			margin 0
			font-weight $Light
			

		.row-top
			margin-bottom 2rem
			

.divisor
	background-color lighten($Gris, 60%)
	color $Gris
	font-size 2.2rem
	font-weight $Normal
	margin 4rem auto !important
	padding 1rem 0.5rem


.legal
	font-style italic

.logo
	display block
	// margin 0 auto
	height auto
	// max-width 23rem
	
	img
		height auto
		max-width 100%
		width 100%


.section
	&-desc
		margin 1rem auto
		max-width 60%
		text-align center	

.size
	max-width 70%
	
.show-login
	color $Gris
	display block
	font-size 2rem
	font-weight $Normal
	margin 1rem auto
	
	&:hover
		color $Verde
	
.title
	&-prensa
		color #fff
		background-color $Verde
		padding 1rem 1.5rem
