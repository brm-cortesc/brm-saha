@media (max-width:865px)
	.btn
		&-add-cart
			padding 0.8rem 1.5rem
	
	.tabs
		li
			a
				padding 1rem 0.6rem
	
@media (max-width:800px)
	.btn
		&-add-cart
			font-size 2rem
			
		&-large
			font-size 2rem
			padding 0.5rem
			
	.container
		&-home
			article
				&:nth-of-type(2)
					a
						&:nth-of-type(1)
							margin-bottom 3.2%


@media (max-width:768px)
	header
		.col
			&-tools
				margin-top 2.2rem
				position initial
				text-align right
				
		.logo
			margin-top 1rem
			
	.cantidad
		max-width 30%
	.cantidad, .size
		display block
		margin 1rem auto
		
	.container
		&-product
			text-align center
			.col
				&-img-big
					img
						height auto
						width 100%
				&-xs-5
					clear both
					float none
					width 100%
					
			.slider
				display none
				
				&.mobile
					display block
					
	.tabs
		li
			a
				padding 1rem 1.5rem		


	.menu
		margin-top 0
		ul
			background-color #fff
			box-shadow 0px -5px 5px 0px rgba(0,0,0,0.4)
			cuadrado(100%)
			max-width 30rem
			padding 15rem 2rem 1rem
			position fixed
			right -32rem
			text-align left
			top 0
			z-index 5
			
			li
				display block
				
				a
					border-bottom 2px solid lighten($Gris, 60%)
					color #000
					font-size 1.6rem
					font-weight $Bold
					padding 1.5rem 0
					
				&:hover, &.active
					a
						color $Verde
						font-weight $Bold
					
				&.active
					a
						border-color $Verde
					

		.btn
			display block
			margin 1rem
			

			
@media (max-width:730px)
	.col-related
		clear both
		float none
		margin 2rem auto
		width 100%
		
		img
			width 100%
			
		.product
			&-text
				text-align left

@media (max-width:700px)

	footer
		h3
			margin-top 2rem
			
		.col-xs-3
			clear both
			float none
			width 100%
			
		.icon
			max-width 3.8rem
			
	.container
		&-devoluciones
			.col-xs-4
				clear both
				float none
				width 100%
	


@media (max-width:390px)
	header
		.col
			&-tools
				.icon
					background-size contain
					&-search, &-user, &-cart
						margin 0 0.3rem
						cuadrado(1.7rem)
						
	.btn
		&-add-cart
			padding 0.8rem 0.5rem

	.col
		&-highlights
			a
				clear both
				float none
				max-width 100%
	
	
	.menu
		.btn
			cuadrado(3.8rem)