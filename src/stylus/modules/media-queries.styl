			padding 15rem 2rem 1rem
			position fixed
			right -32rem
			text-align left
			top 0
			z-index 5
			
			li
				display block
				
				a
					border-bottom 2px solid lighten($Gris, 60%)
					color #000
					font-size 1.6rem
					font-weight $Bold
					padding 1.5rem 0
					
				&:hover, &.active
