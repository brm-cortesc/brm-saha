					.form-tipo
						width 35%
				&-half
					.form-group
						width 100%

		&-categories
			margin-top 2rem
			
			.item-product
				max-height none
				
				.quick-buttons
					opacity 0.99
				
			

		&-filter				
			position relative


			.filtro
				display inline-block
				vertical-align: top
				width (95%/3)
				
				h3
					border 1px solid $Gris
					cursor pointer
					font-size 1.7rem
					padding 0.25rem
					text-align center
					
				.opciones, .size
					display none
					
				.opciones
					background-color #fff
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0, .75)
					font-size 1.8rem
					left 2.5%
					max-width 95%
					opacity 0
					padding 0.5rem
					position absolute
					text-align center
					top 0
					width 100%
					z-index 10
					
					li
						display block
						margin 1rem 0
						
						&::before
							left 1rem
			
			.form-type-bef-link
				display inline
				padding-left 0.5rem
				
				a 
					display inline-block
		
		&-related
			.item-related-img
				max-height none
				
			.product-price, .product-text
				min-heigth none	

	.container
		&-product
			text-align center
			#wrap
				float none !important
				margin 0 auto
					
				.cloud-zoom-gallery-thumbs
					width 100%
					
			.cloud-zoom-gallery-thumbs
			.col
				&-img-big
					img
						height auto
						width 100%
				&-xs-5
					clear both
					float none
					width 100%
			.cantidad
				margin-top 0
				
				label.element-invisible
					margin-right 0

			.producto
				// transform rotate(180deg)
				// direction ltr
				
				.bx-wrapper,
				.col-img-big,
				.commerce-product-field-field-images,
				.info-producto
					// direction ltr
					// transform rotate(-180deg)
					
				.bx
					&-wrapper
						margin-bottom 2rem !important

						.bx-controls-direction
							a
								bottom initial
								left initial
								top 50% !important
								transform rotate(-90deg)
						
						.bx-viewport
							margin 2rem 0 0 0.9rem
							
						.bx-prev
							left -2.3rem !important

							
						.bx-next							
							right -1rem
							
						.slider
														
							.slide
								max-width 5.1%
					
				.col-img-big
					margin-top 2rem
					

			.form-type-commerce-fancy-attributes.form-item-attributes-field-color,
			.form-item.form-type-radios
				display inline-block
				margin-bottom 3rem
				max-width 48%
				vertical-align top
				width 100%
				
				label
					font-size 2rem
					
			.form-type-radio
				label
					cuadrado(3.3rem)
					margin 0 auto
			
			.form-type-radio.form-item-attributes-field-color
				cuadrado(3.3rem)
				
			.commerce-add-to-cart .cantidad
				display inline-block
				
				.form-item
					margin-top 0
					

			.commerce-product-field-field-images, .info-producto
				float none
				position relative
				width 100%
				

			.info-producto
				z-index 10
				
				
				
			.commerce-product-field-field-images
				.cloud-zoom-container
					max-width 100%
					#wrap
						float none !important
						
					.mousetrap
						width 100% !important
						
					.cloud-zoom-gallery-thumbs
						max-width 100%
						width 100%
						
						a
							float left
							margin-top 1rem
							max-width 15%
							
			&.product-bottom
				margin-top 0


	.tabs
		li
			a
				padding 1rem 1.5rem		

	.tab-select
		margin-top 3rem
		li
			max-width 33%
			width 100%
	.menu
		margin-top 0
		
		&::before
			display inline
		ul
			background-color #fff
			box-shadow 0px -5px 5px 0px rgba(0,0,0,0.4)
			cuadrado(100%)
