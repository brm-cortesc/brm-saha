@media (max-width:1100px)
	header
		&.affix
			.col-tools
				bottom 18%
				
			.menu
				padding-left 0

@media (max-width:1040px)
	header
		&.affix
			.col-tools
				bottom 0%
				right -6%
				

	.col
		&-categories
			.quick-buttons
				margin auto
				text-align center
				width 100%
				left 0
				.btn
					&-add-cart
						display block
						font-size 1.8rem
						padding 0.4rem 0.5rem
						margin auto auto 0.5rem
						max-width 95%
						
					&-comparar,
					&-love
						cuadrado(3.5rem)

@media (max-width:980px)
	header
		&.affix
			.menu ul li
				a
					padding 0 1rem

@media (max-width:865px)
	header
		&.affix
			.menu ul li
				a
					padding 0 0.5rem
							
				.logo-hidden
					max-width 17rem
	.btn
		&-add-cart
			padding 0.8rem 1.5rem
	
	.container-product
		
		.commerce-product-field-field-images
			width 66%
			

	.tabs
		li
			a
				padding 1rem 0.6rem
				

	
@media (max-width:800px)
	.btn
		&-add-cart
			font-size 2rem
			
		&-large
			font-size 2rem
			padding 0.5rem
			
	.container
		&-home
			article
				&:nth-of-type(2)
					a
						&:nth-of-type(1)
							margin-bottom 3.2%
	
		&-product			
			.commerce-product-field-field-images
				width 70%
				
			.info-producto
				width 27%

@media (max-width:768px)
	.table-responsive
	.col-carrito.view-commerce-cart-form .col-order
		width 100%!important
	header
		.col
			&-tools
				margin-top 2.2rem
				position initial
				text-align right
				
		.logo
			display block
			margin-top 1rem
			
		.cart-list,
		.header-search,
		.user-menu
			left initial
			right 18%
			top 6rem	
			
		&.affix
			.logo
				display block
				
				&-hidden
					display none

			.menu ul li
				a
					padding 1.5rem 0
						

			.menu
				padding-left 0
							
	.cantidad
		max-width 30%
	.cantidad, .size
		display block
		margin 1rem auto
		
	.col
		&-checkout,
		&-registro 
			.form
				&-documento
					.form-num
						width 60%
					.form-tipo
						width 35%
				&-half
					.form-group
						width 100%

		&-categories
			margin-top 2rem
		&-filter				
			position relative
			.filtro
				display inline-block
				vertical-align: top
				width (95%/3)
				
				h3
					border 1px solid $Gris
					cursor pointer
					font-size 1.7rem
					padding 0.25rem
					text-align center
					
				.opciones, .size
					display none
					
				.opciones
					background-color #fff
					box-shadow 0px 0px 5px 0px rgba(0, 0, 0, .75)
					font-size 1.8rem
					left 2.5%
					max-width 95%
					opacity 0
					padding 0.5rem
					position absolute
					text-align center
					top 0
					width 100%
					z-index 10
					
					li
						display block
						margin 1rem 0
						
						&::before
							left 1rem
			
				
	.container
		&-product
			text-align center
			.col
				&-img-big
					img
						height auto
						width 100%
				&-xs-5
					clear both
					float none
					width 100%
					
			.producto
				transform rotate(180deg)
				// direction ltr
				
				.bx-wrapper,
				.col-img-big,
				.commerce-product-field-field-images,
				.info-producto
					direction ltr
					transform rotate(-180deg)
					
				.bx
					&-wrapper
						margin-bottom 2rem !important

						.bx-controls-direction
							a
								bottom initial
								left initial
								top 50% !important
								transform rotate(-90deg)
						
						.bx-viewport
							margin 2rem 0 0 0.9rem
							
						.bx-prev
							left -2.3rem !important

							
						.bx-next							
							right -1rem
							
						.slider
														
							.slide
								max-width 5.1%
					
				.col-img-big
					margin-top 2rem
					

			.commerce-product-field-field-images, .info-producto
				float none
				width 100%
				
			.commerce-product-field-field-images
				.cloud-zoom-container
					max-width 100%
					#wrap
						float none !important
						
					.mousetrap
						width 100% !important
						
					.cloud-zoom-gallery-thumbs
						width auto
						
						a
							float left
							width 33%


	.tabs
		li
			a
				padding 1rem 1.5rem		


	.menu
		margin-top 0
		
		&::before
			display inline
		ul
			background-color #fff
			box-shadow 0px -5px 5px 0px rgba(0,0,0,0.4)
			cuadrado(100%)
			max-width 30rem
			padding 15rem 2rem 1rem
			position fixed
			right -32rem
			text-align left
			top 0
			z-index 5
			
			li
				display block
				
				a
					border-bottom 2px solid lighten($Gris, 60%)
					color #000
					font-size 1.6rem
					font-weight $Bold
					padding 1.5rem 0
					
				&:hover, &.active
					a
						color $Verde
						font-weight $Bold
					
				&.active
					a
						border-color $Verde
					

		.btn
			display block
			margin 1rem
			
	
	.section-desc
		max-width 90%
			
@media (max-width:730px)
	.col-related
		clear both
		float none
		margin 2rem auto
		width 100%
		
		img
			width 100%
			
		.product
			&-text
				text-align left

@media (max-width:700px)

	footer
		h3
			margin-top 2rem
			
		.col-xs-3
			clear both
			float none
			width 100%
			
		.icon
			max-width 3.8rem
	
	.col
		&-categories
			.col-xs-4
				clear both
				float none
				width 100%
				
				.img-responsive
					width 100%
	.container
		&-devoluciones
			.col-xs-4
				clear both
				float none
				width 100%
	


@media (max-width:500px)

	.col
		&-checkout,
		&-registro 
			.form
				&-documento
					.form-num
						width 100%
					.form-tipo
						width 100%
				&-half
					.form-group
						width 100%
	

		&-filter
			.filtro
				h3
					font-size 1.2rem
					padding 0.8rem 0.25rem
	
		&-categories
			.quick-buttons
				opacity 0.99
	.container
		&-product
			.producto					
				.bx
					&-wrapper		

						.bx-controls-direction
							a
								cuadrado(1rem)
								font-size 1.8rem
													
						.bx-viewport
							margin 2rem 0 0 0.9rem
							
						.bx-prev
							left -1.7rem !important

							
						.bx-next							
							right -0.5rem
							
						// .slider
														
						// 	.slide
						// 		max-width 5.1%


@media (max-width:400px)
	header
		.cart-list,
		.header-search,
		.user-menu
			right 0
			
			
	.menu
		ul
			max-width 25rem
	
	.nav-tabs
		li
			a
				padding 1rem 1.2rem

@media (max-width:390px)
	header
		.col
			&-tools
				.icon
					background-size contain
					&-search, &-user, &-cart
						margin 0 0.3rem
						cuadrado(1.7rem)
						
	.btn
		&-add-cart
			padding 0.8rem 0.5rem

	.col
		&-highlights
			a
				clear both
				float none
				max-width 100%
	
	
	.menu
		.btn
			cuadrado(3.8rem)
			

@media (max-width:370px)
	.col
		&-filter
			.filtro
				width 48%
				h3
					font-size 1.2rem
					padding 0.8rem 0.25rem