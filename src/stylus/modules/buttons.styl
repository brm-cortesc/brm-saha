.btn
	background-color $Gris
	border-radius 0
	color #fff
	line-height 1
	text-align center
	text-transform uppercase
	transitionBase(0.3s)
	
	&:hover
		background-color $Verde
		

	&-add-cart
		font-size 2.4rem
		display inline-block 
		padding 0.8rem 3rem
		min-height 4rem
		

	&-comparar,
	&-love
		background-color lighten($Gris, 40%)
		cuadrado(4rem)
		padding 0.5rem
		margin 0 1rem
		
	&-love
		margin-left 0
		
	&-large
		display block
		font-size 2.6rem
		text-align center
		width 100%

	&-color
		cuadrado(2.4rem)
		
		&:hover
			background-color transparent

	&-size
		background-color white
		border 1px solid lighten($Gris, 60%)
		color $Gris
		cuadrado(3rem)
		display inline-block
		padding 0.5rem
		font-size 1.5rem
		font-weight $Light
		margin 0 0.25rem
		
		&:nth-of-type(1)
			margin-left 0
			
		&:hover
			border-color transparent
		
		&.active
			background-color $Verde
			color #fff